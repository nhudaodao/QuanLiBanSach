@model IEnumerable<MVCBookStore.Models.SACH>
@{
    ViewBag.Title = "SPTheochude";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div style="min-height:800px">
    <div class="products">
        <h3 style="text-align:center;color:red">SÁCH THEO CHỦ ĐỀ</h3>
        <ul>
            <div class="row">
                @foreach (var sach in Model)
            {
                    <li>
                        <div class="col-sm-4 col-lg-4 col-md-4">
                            <div class="thumbnail">
                                <a href="@Url.Action("Details","Bookstore",new { id=sach.Masach})">
                                    <img alt="@sach.Tensach" src="~/Hinhsanpham/@sach.Hinhminhhoa" width="200" />
                                    <div>
                                        <br />
                                        <h4 style="text-align:left">
                                            @sach.Tensach
                                        </h4>
                                        <p></p>
                                    </div>
                                    <div class="ratings">
                                        <p class="pull-right">15 reviews</p>
                                        <p>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                            <span class="glyphicon glyphicon-star"></span>
                                        </p>
                                    </div>
                                </a>
                            </div>
                        </div>

                    </li>
                }
            </div>
        </ul>
    </div>
</div>
